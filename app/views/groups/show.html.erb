<header class="main-header">
    <div class="mh-inner-div">
        <%= link_to tag("i class='fas fa-arrow-left fa-2x'></i"), groups_path, class: "link_i" %>
        <h3><%= @group.name %></h3>
    </div>
</header>

<div class="card m-4">
    <div class="card-header">
        <h4 class="mt-3 mb-4 mx-3"><%= @group.icon %> <%= link_to @group.name, group_path(@group.id) %></h4>
    </div>
    <div class="card-content p-4">
        <p><b>Created at:</b> <%= @group.created_at %></p>
        <p><b>By: </b> <%= link_to @group.creator.username, user_path(@group.creator.id) %></p>
    </div>
</div>

<h3 class="ms-5"><%= @group.name %>'s activities:</h3>
<%= render @group.activities %>
<div class="p-5"></div>
<%= link_to "Add new external activity", activities_new_external_path(group: @group.id), class: "btn-link add-link" %>