<div class="card m-4">
    <div class="card-header">
        <h4 class="mt-3 mb-4 mx-3"><%= group.icon %> <%= link_to group.name, group_path(group.id) %></h4>
    </div>
    <div class="card-content p-4">
        <p><b>Created at:</b> <%= group.created_at %></p>
        <p><b>By: </b> <%= link_to group.creator.username, user_path(group.creator.id) %></p>
    </div>
</div>